{% comment %}
  AfterSol How It Works Section
  Add this to: Online Store > Themes > Edit code > Sections > Add new section
{% endcomment %}

<section class="aftersol-section aftersol-how-it-works">
  <div class="aftersol-container">
    <p class="aftersol-section-subtitle">{{ section.settings.subtitle | default: 'How It Works' }}</p>
    <h2 class="aftersol-section-title">{{ section.settings.title | default: 'Two Steps. One Night. Done.' }}</h2>

    <div class="aftersol-steps">
      <div class="aftersol-step">
        <span class="aftersol-step-number">STEP 1</span>
        <h3>{{ section.settings.step1_title | default: 'Cooling Hydrogel Sheet' }}</h3>
        <p>{{ section.settings.step1_description | default: 'Apply to burned skin. Intense cooling starts immediately. Pain drops fast. Remove after 30 minutes — serum absorbs into skin.' }}</p>
      </div>
      <div class="aftersol-step">
        <span class="aftersol-step-number">STEP 2</span>
        <h3>{{ section.settings.step2_title | default: 'Recovery Sheet (Overnight)' }}</h3>
        <p>{{ section.settings.step2_description | default: 'Apply before bed. Sustained cooling keeps you comfortable all night. Wake up recovered, not wrecked.' }}</p>
      </div>
    </div>

    {% if section.settings.show_cta %}
    <div style="text-align: center; margin-top: 40px;">
      <a href="{{ section.settings.button_link | default: '/products/aftersol-kit' }}" class="aftersol-btn-primary">
        {{ section.settings.button_text | default: 'Get Your Kit — $44' }}
      </a>
      {% if section.settings.show_urgency %}
      <p class="aftersol-urgency">
        <span class="aftersol-urgency-dot"></span>
        {{ section.settings.urgency_text | default: 'Limited stock available' }}
      </p>
      {% endif %}
    </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "AfterSol How It Works",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "How It Works"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Two Steps. One Night. Done."
    },
    {
      "type": "header",
      "content": "Step 1"
    },
    {
      "type": "text",
      "id": "step1_title",
      "label": "Step 1 Title",
      "default": "Cooling Hydrogel Sheet"
    },
    {
      "type": "textarea",
      "id": "step1_description",
      "label": "Step 1 Description",
      "default": "Apply to burned skin. Intense cooling starts immediately. Pain drops fast. Remove after 30 minutes — serum absorbs into skin."
    },
    {
      "type": "header",
      "content": "Step 2"
    },
    {
      "type": "text",
      "id": "step2_title",
      "label": "Step 2 Title",
      "default": "Recovery Sheet (Overnight)"
    },
    {
      "type": "textarea",
      "id": "step2_description",
      "label": "Step 2 Description",
      "default": "Apply before bed. Sustained cooling keeps you comfortable all night. Wake up recovered, not wrecked."
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show CTA Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Get Your Kit — $44"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "checkbox",
      "id": "show_urgency",
      "label": "Show Urgency Text",
      "default": true
    },
    {
      "type": "text",
      "id": "urgency_text",
      "label": "Urgency Text",
      "default": "Limited stock available"
    }
  ],
  "presets": [
    {
      "name": "AfterSol How It Works"
    }
  ]
}
{% endschema %}
