{% comment %}
  AfterSol Hero Section
  Add this to: Online Store > Themes > Edit code > Sections > Add new section
{% endcomment %}

<section class="aftersol-section aftersol-hero">
  <div class="aftersol-container">
    <h1>{{ section.settings.headline | default: 'Got Sunburned?<br>Tonight Is Going to Be Miserable.' }}</h1>
    <p class="subheadline">{{ section.settings.subheadline | default: 'Unless you have AfterSol. Stop the burn in 30 minutes. Sleep through the night.' }}</p>

    <div class="aftersol-before-after">
      <div class="aftersol-ba-item">
        <img
          src="{{ section.settings.before_image | default: 'https://i.imgur.com/wiCkThCl.jpg' }}"
          alt="Sunburned skin before AfterSol"
          loading="eager"
        >
        <span class="aftersol-ba-label aftersol-ba-label--before">Before</span>
      </div>
      <div class="aftersol-ba-divider"></div>
      <div class="aftersol-ba-item">
        <img
          src="{{ section.settings.after_image | default: 'https://i.imgur.com/zaev3B6l.jpg' }}"
          alt="Healed skin after AfterSol"
          loading="eager"
        >
        <span class="aftersol-ba-label aftersol-ba-label--after">After</span>
      </div>
    </div>

    <p class="aftersol-ba-caption">{{ section.settings.caption | default: 'One night with AfterSol' }}</p>

    <a href="{{ section.settings.button_link | default: '/products/aftersol-kit' }}" class="aftersol-btn-primary">
      {{ section.settings.button_text | default: 'Get Relief Tonight — $44' }}
    </a>

    {% if section.settings.show_urgency %}
    <p class="aftersol-urgency">
      <span class="aftersol-urgency-dot"></span>
      {{ section.settings.urgency_text | default: 'Only 23 kits left in stock — Ships in 2-3 weeks' }}
    </p>
    {% endif %}

    {% if section.settings.show_trust_signals %}
    <div class="aftersol-trust-signals">
      <span class="aftersol-trust-item">
        <span class="aftersol-trust-icon">&#10003;</span> 100% Money-Back Guarantee
      </span>
      <span class="aftersol-trust-item">
        <span class="aftersol-trust-icon">&#128274;</span> Secure Checkout
      </span>
      <span class="aftersol-trust-item">
        <span class="aftersol-trust-icon">&#10003;</span> Free Shipping
      </span>
    </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "AfterSol Hero",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Got Sunburned?<br>Tonight Is Going to Be Miserable."
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Unless you have AfterSol. Stop the burn in 30 minutes. Sleep through the night."
    },
    {
      "type": "image_picker",
      "id": "before_image",
      "label": "Before Image"
    },
    {
      "type": "image_picker",
      "id": "after_image",
      "label": "After Image"
    },
    {
      "type": "text",
      "id": "caption",
      "label": "Image Caption",
      "default": "One night with AfterSol"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Get Relief Tonight — $44"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "checkbox",
      "id": "show_urgency",
      "label": "Show Urgency Text",
      "default": true
    },
    {
      "type": "text",
      "id": "urgency_text",
      "label": "Urgency Text",
      "default": "Only 23 kits left in stock — Ships in 2-3 weeks"
    },
    {
      "type": "checkbox",
      "id": "show_trust_signals",
      "label": "Show Trust Signals",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "AfterSol Hero"
    }
  ]
}
{% endschema %}
